<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/paleta_azulclaro"
    tools:context=".EsperandoJugadores">

    <TextView
        android:id="@+id/code_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="4dp"
        android:fontFamily="@font/vanillaextract"
        android:text="codigo: 00000"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="40sp" />

    <TextView
        android:id="@+id/equipo_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/code_txt"
        android:fontFamily="@font/vanillaextract"
        android:text="equipos"
        android:textAlignment="center"
        android:textColor="@color/paleta_negro"
        android:textSize="18sp" />

    <ListView
        android:id="@+id/listajugadores_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/boto1"
        android:layout_below="@id/equipo_tv"
        android:divider="@null">

    </ListView>

    <RelativeLayout
        android:id="@+id/boto1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="10sp"
        android:layout_marginBottom="13sp">

        <Button
            android:id="@+id/imageButt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="60sp"
            android:layout_marginRight="60sp"
            android:background="@android:color/transparent"
            android:fontFamily="@font/vanillaextract"
            android:foregroundGravity="center_vertical"
            android:onClick="openInsertarTabus"
            android:paddingBottom="5dp"
            android:text="empezar"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="24sp" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="110sp"
            android:layout_marginRight="110sp"
            android:adjustViewBounds="true"
            android:background="@android:color/transparent"
            android:clickable="true"
            android:onClick="openInsertarTabus"
            app:srcCompat="@drawable/botonabajo" />

    </RelativeLayout>

</RelativeLayout>